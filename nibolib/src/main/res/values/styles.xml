<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="NiboTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NiboPlacePickerTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NiboOrigDestTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/colorPrimaryDark
        </item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="originRoundViewStyle">@style/BaseOriginCircleViewTheme</item>
        <item name="destinationRoundViewStyle">@style/BaseDestinationCircleViewTheme</item>
        <item name="originDestinationSeperatorLineColor">@color/white</item>
        <item name="textViewClearerIcon">@drawable/ic_close_circle_black_18dp</item>
        <item name="detailsBackground">@color/colorPrimary</item>
        <item name="appBarBackground">@color/colorPrimary</item>
        <item name="navigationIcon">@drawable/arrow_left</item>

        <item name="distanceDurationTextColor">@color/white</item>
        <item name="originDestinationTextColor">@color/white</item>
        <item name="progressBarColor">@color/colorAccent</item>

        <item name="origTextViewHint">@string/origin_hint</item>
        <item name="destTextViewHint">@string/destination_hint</item>

        <item name="origTextViewHintColor">#808080</item>
        <item name="destTextViewHintColor">#808080</item>

        <item name="origTextViewTextColor">@color/black</item>
        <item name="destTextViewTextColor">@color/black</item>

        <item name="originEditTextBg">@color/white</item>
        <item name="destEditTextBg">@color/white</item>

        <item name="doneFabColorRes">@color/colorAccent</item>
        <item name="doneFabIconRes">@drawable/ic_navigation_white_24dp</item>

        <item name="suggestionItemTitleTextColor">@color/white</item>
        <item name="suggestionItemSubtitleTextColor">@color/white</item>
        <item name="suggestionItemSeperatorLineColor">@color/white</item>
        <item name="suggestionItemLeftIconTintColor">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseOriginCircleViewTheme">
        <item name="colorSelected">@color/colorAccent</item>
        <item name="colorUnselected">@color/white</item>
    </style>

    <style name="BaseDestinationCircleViewTheme">
        <item name="colorSelected">@color/colorAccent</item>
        <item name="colorUnselected">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NiboTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NiboTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <string name="origin_hint">select a starting point</string>
    <string name="destination_hint">destination hint</string>
</resources>
